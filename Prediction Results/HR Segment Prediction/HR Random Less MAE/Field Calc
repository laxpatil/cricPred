CURRENT HOME RUNS

IF WINDOW_MAX(SUM([Current HR])) > WINDOW_MAX(SUM([Predicted HR])) THEN SUM([Current HR])  
ELSE SUM([Predicted HR])  
END


PREDICTED HOME RUNS

SUM([Predicted HR])










CURRENT NON HOME RUNS

IF WINDOW_MAX(SUM([Current NHR])) > WINDOW_MAX(SUM([Predicted NHR])) THEN SUM([Current NHR])  
ELSE SUM([Predicted NHR])  
END


PREDICTED NON HOME RUNS

SUM([Predicted NHR])





TOTAL RUNS TILL SEGMENT

IF WINDOW_MAX(SUM([Total Runs Till Segment])) > WINDOW_MAX(SUM([Predicted Total runs till Segment])) THEN SUM([Total Runs Till Segment])  
ELSE SUM([Predicted Total runs till Segment])  
END



PREDICTED RUNS TILL SEGMENT

SUM([Predicted Total runs till Segment])









FINAL

IF WINDOW_MAX(SUM([Final Runs Made])) > WINDOW_MAX(SUM([Predicted Total runs till Segment])) THEN SUM([Final Runs Made])  
ELSE SUM([Predicted Total runs till Segment])  
END
